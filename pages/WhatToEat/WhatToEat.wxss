/* pages/WhatToEat/WhatToEat.wxss */
.header {
    display: block;
    width: 50vw;
    height: 5vh;
    padding: 4vh;
    margin: 1vh auto;
    font-size: 8vw;
    font-weight: 700;
    line-height: 5vh;
    text-align: center;
}

.main_box {
    float: left;
    width: 90vw;
    margin: 2vh 5vw;
    min-height: 220px;
    border-radius: 5vw;
    box-shadow: 0 0 4vw 1.4vw rgba(0, 0, 0, .3);
    background-color: #fff;
}

.main_box .hr {
    float: left;
    width: 94%;
    margin: 0 3%;
    border-top: 1px dashed #808080;
}

.main_box .res {
    float: left;
    width: 90%;
    height: 12vw;
    margin: 0 auto;
    padding: 5%;
}

.main_box .foods {
    float: left;
    width: 90%;
    /* height: 250px; */
    padding: 5%;
}

.main_box .res .res_food,
.main_box .foods .add_food {
    float: left;
    width: 60%;
    height: calc(12vw - 2px);
    padding: 0 calc((10% - 1px) / 2);
    line-height: 12vw;
    background-color: #fff;
    border: 1px solid #808080;
    border-right: 0;
    border-radius: 3vw 0 0 3vw;
    box-shadow: .5vw 0 1.7vw .7vw rgba(0, 0, 0, .3);
    font-size: 4.5vw;
}

.main_box .foods .add_food {
    overflow: hidden;
}

.main_box .res .res_food .food {
    display: block;
    float: left;
    max-width: 80%;
    overflow: hidden;
}

.main_box .res .res_food .num {
    float: right;
    max-width: 16%;
    overflow: hidden;
    margin-left: 4%;
    font-size: 2.8vw;
}

.main_box .res .res_btn,
.main_box .foods .add_btn {
    float: right;
    width: 30%;
    height: 12vw;
    padding: 0;
    line-height: 12vw;
    background-color: #eee;
    border-radius: 0 3vw 3vw 0;
    border: 1px solid #808080;
    border-left: 0;
    box-shadow: 1.3vw 0 1.7vw .7vw rgba(0, 0, 0, .3);
    font-size: 4.5vw;
}

.main_box .foods .list_foods {
    float: left;
    width: 100%;
    margin-top: 1.5vh;
}

.main_box .foods .li_food {
    float: left;
    width: 40%;
    height: 9vw;
    margin: 1.8vw 5%;
    font-size: 4.2vw;
    line-height: 9vw;
    text-align: center;
    border-radius: 2.5vw;
    background-color: #f9f9f9;
    box-shadow: 0 0 1.7vw .2vw rgba(0, 0, 0, .3);
}

.main_box .foods .li_food .f {
    display: block;
    float: left;
    width: 76%;
    height: 9vw;
    margin-left: 4%;
}

.main_box .foods .li_food .del {
    display: block;
    float: right;
    width: 20%;
    height: 100%;
    color: #999;
}
